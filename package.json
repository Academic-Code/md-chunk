{
  "name": "flow-scc",
  "version": "0.1.0",
  "main": "scc.js",
  "description": "About Creator of statistical content, your cms in cli format and generation of html files and statistical markdown.",
  "repository": "git@github.com:edmilson-dk/flow-scc.git",
  "author": "Edmilson Jesus <droidvidaboa@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf ./lib && tsc && mv ./lib/src/* ./lib && rm -rf ./lib/src && npm run build-bin",
    "build-bin": "mv ./lib/scc.js ./lib/scc && chmod +x ./lib/scc",
    "start:dev": "npx ts-node-dev --transpile-only src/scc.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format",
    "postversion": "git push && git push --tags"
  },
  "types": "lib/scc.d.ts",
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/commander": "^2.12.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/highlight.js": "^10.1.0",
    "@types/inquirer": "^7.3.3",
    "@types/markdown-it": "^12.0.3",
    "@types/node": "^16.3.1",
    "prettier": "^2.3.2",
    "ts-node-dev": "^1.1.8",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.3.5"
  },
  "bin": {
    "scc": "lib/scc.js"
  },
  "keywords": [
    "HTML",
    "Markdown",
    "CLI"
  ],
  "dependencies": {
    "chalk": "^4.1.1",
    "commander": "^8.0.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "highlight.js": "^11.1.0",
    "inquirer": "^8.1.1",
    "markdown-it": "^12.1.0",
    "remark": "^13.0.0",
    "remark-html": "^13.0.1",
    "remark-preset-lint-recommended": "^5.0.0"
  }
}
